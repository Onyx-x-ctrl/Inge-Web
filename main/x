<VirtualHost *:80>
    ServerName localhost

    WSGIDaemonProcess miapp python-path=/var/www/html/miapp
    WSGIScriptAlias / /var/www/html/miapp/app.py

    <Directory /var/www/html/miapp>
        Require all granted
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/miapp_error.log
    CustomLog ${APACHE_LOG_DIR}/miapp_access.log combined
</VirtualHost>
